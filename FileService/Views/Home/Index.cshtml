@using FileService.Models.Entities;
@{
    ViewData["Title"] = "Home Page";
}
@model List<FileEntity>
<div class="col-lg-12 grid-margin stretch-card mt-5">
    <div class="card">
        <h3 style="text-align:center" class="card-title col-12">Pictures/Document</h3>
        <a asp-controller="home" asp-action="AddFile" class="btn btn-primary">Add File</a>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Pictures/Document</th>
                        <th>Created</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.Path" width="150" height="100">
                                </td>
                                <td>@item.Created</td>
                                <td><a class="btn btn-outline-danger" asp-controller="home" asp-action="DeleteFile" asp-route-id="@item.Id">Delete</a></td>
                            </tr>
                        }
                    }
                </tbody>
                
            </table>
           
        </div>

    </div>

</div>
